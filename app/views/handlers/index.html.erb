<p id="notice"><%= notice %></p>

<h1>Handlers</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Country</th>
      <th>Number</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @handlers.each do |handler| %>
      <tr>
        <td><%= handler.name %></td>
        <td><%= handler.country %></td>
        <td><%= handler.number %></td>
        <td><%= link_to 'Show', handler %></td>
        <td><%= link_to 'Edit', edit_handler_path(handler) %></td>
        <td><%= link_to 'Destroy', handler, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Handler', new_handler_path %>
